{
  "name": "lexure",
  "version": "0.15.0",
  "description": "Parser and utilities for non-technical user input.",
  "keywords": [
    "lexer",
    "parser",
    "parsing",
    "command",
    "commands",
    "api",
    "args",
    "arguments"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/suffering.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "author": "1Computer <onecomputer00@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/1Computer1/lexure.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "eslint ./src ./test --ext .ts",
    "bench": "npm run build && node benchmarks",
    "docs": "rimraf docs/reference && typedoc",
    "prepare": "tsdx build",
    "prepublishOnly": "npm run lint && npm run test",
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --coverage"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "src/*.{ts,js}"
    ]
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.33",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "benchmark": "^2.1.4",
    "eslint": "^7.2.0",
    "eslint-plugin-jest": "^23.20.0",
    "fast-check": "^1.25.1",
    "jest": "^26.0.1",
    "jest-config": "^26.0.1",
    "rimraf": "^3.0.2",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.1",
    "ts-jest": "^26.1.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "github:1Computer1/typedoc-plugin-markdown#custom",
    "typescript": "^3.9.5"
  }
}
